rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection - only cloud functions can write
    match /users/{userId} {
      // Allow read if authenticated and is the same user
      allow read: if request.auth != null && request.auth.uid == userId;
      // Only cloud functions can write (using admin SDK)
      allow write: if false;
    }
    
    // Subscription events - only cloud functions can access
    match /subscription_events/{eventId} {
      allow read, write: if false;
    }
    
    // Payments - only cloud functions can access
    match /payments/{paymentId} {
      allow read, write: if false;
    }
  }
}